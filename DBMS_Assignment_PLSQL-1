-- 2) WAP to check whether number is odd or even.

DECLARE
	a number := 4;
BEGIN
	if MOD(a,2) = 0 THEN
    DBMS_OUTPUT.PUT_LINE('number ' || a ||' is even');
	else
	DBMS_OUTPUT.PUT_LINE('number ' || a ||' is odd');
	END if;
END;
/

